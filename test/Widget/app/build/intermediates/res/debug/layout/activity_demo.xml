<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/lj_common_app_style"
    android:orientation="vertical" >

    <com.transfar.common.ui.view.widget.LJTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.transfar.common.ui.view.widget.LJTableView
        android:id="@+id/c_tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:changeBackground="false"
        app:leftCharNum="4"
        app:leftText="会员名"
        app:showArrow="false"
        app:type="top" />
    
    <com.transfar.common.ui.view.widget.LJTableView
        android:id="@+id/c_tv_auth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:changeBackground="false"
        app:leftCharNum="4"
        app:leftText="会员认证"
        app:rightTextColor="@color/lj_color_blue"
        app:type="bottom" />

    <com.transfar.common.ui.view.widget.LJLabelView
        android:id="@+id/c_lv_security_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelContentColor="@color/lj_color_green"
        app:labelContentText="强"
        app:labelLeftText="安全等级:"
        app:labelRightText="请设置下列项目保护账号" />

    <com.transfar.common.ui.view.widget.LJTableView
        android:id="@+id/c_tv_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:changeBackground="false"
        app:leftCharNum="4"
        app:leftText="手机号"
        app:rightText="变更"
        app:type="top" />

    <com.transfar.common.ui.view.widget.LJTableView
        android:id="@+id/c_tv_login_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:changeBackground="true"
        app:contentTextColor="#ff0000"
        app:leftCharNum="4"
        app:leftText="登录密码"
        app:rightText="修改"
        app:rightTextColor="@color/lj_color_blue"
        app:type="bottom" />

    <Button
        android:id="@+id/btn_logout"
        style="@style/lj_style_second_btn"
        android:layout_marginTop="15dp"
        android:text="退出登录" />

</LinearLayout><!-- From: file:/C:/Users/lenovo/workspace/Widget/app/src/main/res/layout/activity_demo.xml -->