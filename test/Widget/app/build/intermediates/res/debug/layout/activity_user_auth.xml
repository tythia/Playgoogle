<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/lj_common_app_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.transfar.common.ui.view.widget.LJTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.transfar.common.ui.view.widget.LJLabelView
        android:id="@+id/c_tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelLeftText="用户基本信息" />

    <com.transfar.common.ui.view.widget.LJInputView
        android:id="@+id/c_tv_auth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:inputContentHint="请输入"
        app:inputLeftCharNum="4"
        app:inputLeftText="真实姓名" />

    <com.transfar.common.ui.view.widget.LJInputView
        android:id="@+id/c_lv_security_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:inputContentHint="请输入"
        app:inputLeftCharNum="4"
        app:inputLeftText="身份证" />

    <com.transfar.common.ui.view.widget.LJInputView
        android:id="@+id/c_tv_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:inputContentHint="请输入"
        app:inputLeftCharNum="4"
        app:inputLeftText="手机"
        app:inputType="number" />

    <com.transfar.common.ui.view.widget.LJInputView
        android:id="@+id/c_tv_login_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:inputContentHint="请输入"
        app:inputLeftCharNum="4"
        app:inputLeftText="地址"
        app:inputViewType="bottom" />

    <Button
        android:id="@+id/btn_commit"
        style="@style/lj_style_main_btn"
        android:layout_marginTop="20dp"
        android:text="提交" />

</LinearLayout><!-- From: file:/C:/Users/lenovo/workspace/Widget/app/src/main/res/layout/activity_user_auth.xml -->